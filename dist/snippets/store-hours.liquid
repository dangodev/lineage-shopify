<section class="has-hours" style="background-image:url({{ 'image-orlando.png' | asset_url }})">
  <div class="cell">
    <h1 class="hours-heading">Come visit us!</h1>
    <h2 class="hours-subheading">Two convenient locations</h2>
    <div class="hours-grid">
      <div class="hours">
        <h2 class="hours-location">Downtown</h2>
        <h3 class="hours-soon">Coming Soon!</h3>
      </div>
      <div class="hours">
        <table class="data">
          <v-lineage-hours location="East End Market" :holidays="[1125]" :open="[10,8,8,8,8,8,8]" :close="[18,19,19,19,19,19,19]"></v-lineage-hours>
          <tbody class="data-body">
            <tr class="data-row">
              <td class="data-term">M–F</td>
              <td class="data-value">8a – 7p</td>
            </tr>
            <tr class="data-row">
              <td class="data-term">Sat</td>
              <td class="data-value">8a – 7p</td>
            </tr>
            <tr class="data-row">
              <td class="data-term">Sun</td>
              <td class="data-value">10a – 6p</td>
            </tr>
          </tbody>
        </table>
        <a href="https://maps.apple.com/?q={{ shop.address.summary | escape }}" class="hours-directions">
          <svg aria-label="Pin" role="img"><use xlink:href="#icon_marker"></use></svg>
          Directions
        </a>
      </div>
    </div>
  </div>
</section>
