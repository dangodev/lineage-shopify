<a class="card{% if modifier %} card--{{ modifier }}{% endif %}" href="{{ product.url }}" itemscope itemtype="http://schema.org/Product">
  {% if label %}
  <h4>{{ label }}</h4>
  {% endif %}
  <meta itemprop="url" content="{{ product.url }}" />
  <div class="card-img" itemtype="image" content="{{ product.featured_image | img_url 'medium' }}" style="background-image:url({{ product.featured_image | img_url 'medium' }})">
    <div>{% include 'notes' %}</div>
  </div>
  <h2 class="card-title" itemprop="name">{{ product.title }}</h2>
  {% if product.metafields.c_f.region %}
  <h4 class="card-subtitle">{{ product.metafields.c_f.region }}, {{ product.metafields.c_f.country }}</h4>
  {% endif %}
  {% if product.metafields.c_f.altitude %}
  <h5 class="card-label">{{ product.metafields.c_f.altitude | round }}m</h5>
  {% endif %}
</a>
