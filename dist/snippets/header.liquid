<header class="header" itemscope itemtype="http://schema.org/LocalBusiness">
  <meta itemprop="name" content="{{ shop.name }}" />
  <a href="{{ shop.url }}"><img class="header-logo" itemprop="logo" src="{{ 'lineage.svg' | asset_url }}" alt="{{ shop.name }}"></a>
  <nav class="header-nav nav" role="navigation">
    <ul>
      {% comment %}
      {% for link in linklists.main-menu.links %}
        <li><a class="nav-link" href="{{ link.url }}">{{ link.title }}</a></li>
      {% endfor %}
      {% endcomment %}
      <li><a class="nav-link" href="{{ collections.coffee.url }}">Coffee</a></li>
      <li><a class="nav-link" href="{{ collections.gear.url }}">Gear</a></li>
      <li><a class="nav-link" href="{{ pages.guides.url }}">Guides</a></li>
      <li><a class="nav-link" href="{{ pages.about.url }}">About</a></li>
      <li><a class="nav-link nav-cart" {% if cart.item_count > 0 %}data-cart="{{ cart.item_count }}" {% endif %}href="/cart"><svg aria-label="Cart" class="icon icon--cart" role="img"><use xlink:href="#icon_cart"></use></svg></a></li>
    </ul>
  </nav>
</header>
