<span class="price">
  <span class="price-amount" content="{{ price | money_without_currency }}" itemprop="price">
    <span class="price-currency" content="{{ shop.currency }}" itemprop="priceCurrency">$</span>
    <span class="price-dollars">{{ price | money_without_currency | replace_first: '.', '</span><span class="price-cents">' }}</span>
  </span>
  {% if price < product.compare_at_price_max %}
    <span class="price price--og">
      <span class="price-amount">
        <span class="price-currency">$</span>
        <span class="price-dollars">{{ product.compare_at_price_max | money_without_currency | replace_first: '.', '</span><span class="price-cents">' }}</span>
      </span>
    </span>
  {% endif %}
  {% unless product.available %}
    <div class="price-status">Out of Stock</div>
  {% endunless %}
</span>
