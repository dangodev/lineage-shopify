<div class="row">
  <v-carousel
    :auto="{{ settings.home_hero_auto_speed }}"
    :slides="[
    {% if settings['hero_slide_1_enable'] %}
      {
      cta: '{{ settings['hero_slide_1_cta'] }}',
      color: '{{ settings['hero_slide_1_text_color'] }}',
      image: '{{ 'hero_slide_1.jpg' | asset_img_url: '2048x2048' }}',
      link: '{{ settings['hero_slide_1_link'] }}',
      },
    {% endif %}
    {% if settings['hero_slide_2_enable'] %}
      {
      cta: '{{ settings['hero_slide_2_cta'] }}',
      color: '{{ settings['hero_slide_2_text_color'] }}',
      image: '{{ 'hero_slide_2.jpg' | asset_img_url: '2048x2048' }}',
      link: '{{ settings['hero_slide_2_link'] }}',
      },
    {% endif %}
    {% if settings['hero_slide_3_enable'] %}
      {
      cta: '{{ settings['hero_slide_3_cta'] }}',
      color: '{{ settings['hero_slide_3_text_color'] }}',
      image: '{{ 'hero_slide_3.jpg' | asset_img_url: '2048x2048' }}',
      link: '{{ settings['hero_slide_3_link'] }}',
      },
    {% endif %}
    ]" />
  <div class="siema-preload" style="background-image:url({{ 'hero_slide_1.jpg' | asset_img_url: '2048x2048' }})"></div>
</div>
{% include 'store-hours' %}
<div class="row">
  <div class="has-block">
    <a href="{{ collections.coffee.url }}" class="block" style="background-image:url({{ 'bg-coffee.jpg' | asset_img_url: '1024x1024' }})">
      <span class="button button--white"><span class="button-inner">Shop Coffee</span></span>
    </a>
    <a href="{{ pages.wholesale.url }}" class="block" style="background-image:url({{ 'bg-wholesale.jpg' | asset_img_url: '1024x1024' }})">
      <span class="button button--white"><span class="button-inner">Wholesale</span></span>
    </a>
  </div>
</div>
