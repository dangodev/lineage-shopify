{% assign subscription = all_products.subscription %}
<a class="hero" href="{{ subscription.url }}" style="background-image:url({{ subscription.featured_image | img_url: 'master' }})">
  <span class="hero-title">Subscriptions</span>
  <span class="button"><span class="button-inner">Learn More</span></span>
</a>

<section class="row">
  <div class="well cell">
    <h1 class="tac">{{ collection.title }}</h1>
  </div>

  <div class="well cell">
    <div class="has-card">
      {% for product in collection.products %}{% include 'product-card' %}{% endfor %}
    </div>
  </div>
</section>
