{% if page.metafields.c_f.background %}
<header class="hero" style="background-image:url({{ page.metafields.c_f.background }})"></header>
  {% endif %}
<div class="cell">
  <div class="layout layout--single">
    <article class="layout-body">
      <div class="well--l"><h1>{{ page.title }}</h1></div>
      <div class="well">
        {{ page.content }}
        <div class="has-guide">
          <a class="guide" href="https://medium.com/lineage-academy/">
            <svg aria-label="Pourover" class="guide-icon icon icon--pourover" role="img">
              <use xlink:href="#icon_pourover"></use>
            </svg>
            <h3 class="guide-title">Pourover Guide</h3>
            <div class="guide-description">Discover the cleaner, lighter notes of the roast with pourover brewing.</div>
          </a>
        </div>
      </div>
    </article>
  </div>
</div>
